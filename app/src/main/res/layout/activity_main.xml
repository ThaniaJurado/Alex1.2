<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:focusableInTouchMode="false"
    android:background="#000000">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#000000"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#000000"
            android:layout_weight="0.46">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nos encontramos en:"
                android:id="@+id/NosEncontramosEn"
                android:textColor="#ffffff"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sin datos"
                android:id="@+id/resultado"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¿Ubicación errónea? Cámbiela a continuación"
                android:id="@+id/AjustarUbicacion"
                android:layout_gravity="center_horizontal"
                android:textColor="#f0cece"
                android:clickable="true" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtUbicacionAlternativa"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usar ubicación alternativa"
                android:id="@+id/btnUbicacionAlternativa"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

        <Button
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:text="Botón de pánico"
            android:id="@+id/BotonPanico"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.46"
            android:background="#3f51b5"
            android:textColor="#ffffff"
            android:textSize="35dp" />

    </LinearLayout>
</RelativeLayout>
